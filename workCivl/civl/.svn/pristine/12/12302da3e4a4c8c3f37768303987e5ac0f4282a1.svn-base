/* Commandline execution:
 *		civl verify bundleSize.cvl
 * */
#include<civlc.h>

int N=5;
$input double a[N];

void main() {
  $bundle bun;
  int size;
  
  for (int i=0; i<N; i++) a[i] = i;
  bun = $bundle_pack(&a[0], N*sizeof(double));
  size = $bundle_size(bun);
  $assert size == N*sizeof(double);
  $assert size / sizeof(double) == N;
}
